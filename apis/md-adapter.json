{
    "openapi": "3.0.1",
    "info": {
      "title": "MD Adapter",
      "version": "1.0.0",
      "description": "MD adapter API Documentation"
    },
    "servers": [
      {
        "url": "https://docs.raqn.io"
      }
    ],
    "paths": {
      "/md/{organisation}/{project}/{repo}/{path}": {
        "get": {
          "summary": "Retrieve and convert a Markdown file to HTML",
          "parameters": [
            {
              "in": "path",
              "name": "organisation",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "path",
              "name": "project",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "path",
              "name": "repo",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "in": "path",
              "name": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "HTML content of the Markdown file",
              "content": {
                "text/html": {
                  "schema": {
                    "type": "string"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "404": {
              "description": "Not Found"
            }
          }
        }
      }
    },
    "components": {},
    "tags": []
  }